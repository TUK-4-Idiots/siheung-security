<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/onemobiletitle"
        android:text="회원가입"
        android:textSize="17sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/backButton"/>
    <TextView
        android:id="@+id/progressBarPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        app:layout_constraintLeft_toRightOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/signUpActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 입력해주세요"
        android:textColor="#000"
        android:fontFamily="@font/onemobiletitle"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/nameInputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#000"
        android:fontFamily="@font/onemobiletitle"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/signUpActivityTitle"
        android:layout_marginTop="44dp"
        app:layout_constraintLeft_toLeftOf="@+id/backButton"
        android:layout_marginLeft="8dp"
        />
    <EditText
        android:id="@+id/nameInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요."
        android:fontFamily="@font/onemobilebold"
        android:textSize="14sp"
        android:background="@drawable/button_background_white"
        app:layout_constraintTop_toBottomOf="@+id/nameInputTitle"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/nameInputTitle"
        android:paddingVertical="12dp"
        android:paddingStart="9dp"
        android:paddingRight="250dp"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>