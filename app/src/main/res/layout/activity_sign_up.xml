<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/onemobiletitle"
        android:text="회원가입"
        android:textSize="17sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/backButton"/>
    <TextView
        android:id="@+id/progressBarPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        app:layout_constraintLeft_toRightOf="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/signUpActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 입력해주세요"
        android:textColor="#000"
        android:fontFamily="@font/onemobiletitle"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signUpActivityTitle"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="385dp"
            android:height="40dp"
            android:background="@drawable/button_background_white"
            android:fontFamily="@font/nanumbarungothic"
            android:hint="이름을 입력해주세요."
            android:paddingStart="9dp"
            android:textSize="14sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nameInputLayout"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="385dp"
            android:height="40dp"
            android:background="@drawable/button_background_white"
            android:fontFamily="@font/nanumbarungothic"
            android:hint="이메일을 입력해주세요."
            android:paddingStart="9dp"
            android:textSize="14sp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/emailInputGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올바른 이메일 형식이 아닙니다."
        android:textColor="@color/invalid"
        android:fontFamily="@font/nanumbarungothic"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/emailInputLayout"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailInputLayout"
        android:visibility="gone"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailInputLayout"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailInputLayout"
        android:visibility="gone"
        app:endIconMode="password_toggle"
        >
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="385dp"
            android:height="40dp"
            android:hint="비밀번호를 입력해주세요."
            android:fontFamily="@font/nanumbarungothic"
            android:textSize="14sp"
            android:background="@drawable/button_background_white"
            app:layout_constraintTop_toBottomOf="@+id/passwordInputTitle"
            android:paddingVertical="12dp"
            android:paddingStart="9dp"
            android:inputType="textPassword"
            tools:ignore="MissingConstraints"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/passwordInputGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영문, 숫자와 특수문자를 포함하여 8자리 이상 입력해주세요."
        android:textColor="@color/invalid"
        android:fontFamily="@font/nanumbarungothic"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputLayout"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/passwordInputLayout"
        android:visibility="gone"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/verifyPasswordInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputLayout"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/passwordInputLayout"
        android:visibility="gone"
        app:endIconMode="password_toggle"
        >
            <EditText
                android:id="@+id/verifyPasswordInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="385dp"
                android:height="40dp"
                android:hint="비밀번호를 한 번 더 입력해 주세요."
                android:fontFamily="@font/nanumbarungothic"
                android:textSize="14sp"
                android:background="@drawable/button_background_white"
                android:paddingVertical="12dp"
                android:paddingStart="9dp"
                android:inputType="textPassword"
                tools:ignore="MissingConstraints"
                />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/verifyPasswordInputGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="@color/invalid"
        android:fontFamily="@font/nanumbarungothic"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/verifyPasswordInputLayout"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/verifyPasswordInputLayout"
        android:visibility="gone"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>